doctype html
html(lang='en')
  head
    title Altexo
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='cache-control', content='max-age=0')
    meta(http-equiv='cache-control', content='no-cache')
    meta(http-equiv='expires', content='0')
    meta(http-equiv='expires', content='Tue, 01 Jan 1980 1:00:00 GMT')
    meta(http-equiv='pragma', content='no-cache')
    meta(name='description' content='3d video chat, holographic chat')
    meta(name='author' content='Lugati Ltd.')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    //- OPEN GRAPH PROPERTIES
    meta(property='og:url', content='https://altexo.com/chat')
    meta(property='og:type', content='website')
    meta(property='og:title', content='3d video chat, holographic chat')
    meta(property='og:description', content='Creating live human being holograms, live holographic streaming. Integrating holograms into virtual reality.')
    meta(property='og:image', content='https://altexo.com/static/streams/img/img/preview.png')
    //- STYLES
    //-
    link(rel='icon',type='image/png', href='/static/landing/img/img/favicon.png')

    if DEBUG == 'true'
      base(href='/')
    else
      base(href='/chat/')

  body(layout='row', ng-cloak='', ng-controller='RootCtrl')
    ng-view(layout='column', flex='grow', style='overflow-y:hidden;overflow-x:hidden;position:relative')

    //- SEO
    if DEBUG != 'true'
      include _seo
